{
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "ignoreChanges": ["*.md"],
      "message": "ci(release): publish",
      "conventionalCommits": true
    },
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": ["*.md"],
      "message": "ci(release): publish"
    }
  }
}
