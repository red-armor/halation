    "@types/react-dom": "^17.0.0",
    "@xhs/relinx": "^3.5.6",
    "babel-loader": "^8.2.2",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.0",
    "state-tracker": "^1.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
